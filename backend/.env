# backend/.env

# ============ 基础配置 ============
DEBUG=true
LOG_LEVEL=INFO
LOG_DIR=logs

# ============ API 服务配置 ============
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============ LiveKit Cloud 配置 ============
# 从 https://cloud.livekit.io/ 获取
LIVEKIT_URL=wss://11111.livekit.cloud
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
ROOM_NAME=voice-room

# ============ AI Agent 配置 ============
AGENT_IDENTITY=voice-assistant-ai

# ============ 阿里云通义千问配置 ============
# 从 https://dashscope.console.aliyun.com/ 获取
DASHSCOPE_API_KEY=sk-
QWEN_MODEL=qwen-turbo

# ============ 阿里云语音识别配置 ============
# 从 https://nls-portal.console.aliyun.com/ 获取

# 方式1: 使用 Token（测试环境，24小时有效）
ALIYUN_APP_KEY=
ALIYUN_NLS_TOKEN=

# 方式2: 使用 AccessKey（生产环境，自动刷新）
# ALIYUN_APP_KEY=
# ALIYUN_ACCESS_KEY_ID=
# ALIYUN_ACCESS_KEY_SECRET=

# Supabase 配置
SUPABASE_URL=https://11111.supabase.co
SUPABASE_KEY=
SUPABASE_JWT_SECRET=

